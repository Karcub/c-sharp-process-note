    <DockPanel HorizontalAlignment="Left" Height="416" LastChildFill="False" Margin="66,39,0,0" VerticalAlignment="Top" Width="660">

        <Grid DockPanel.Dock="Bottom" Height="189" Margin="321,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ListView Name ="commentsList" HorizontalAlignment="Left" Height="156" VerticalAlignment="Top" Width="339" Margin="0,23,0,0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Comments" Width="339"/>
                    </GridView>
                </ListView.View>
            </ListView>


        </Grid>
        <Grid DockPanel.Dock="Left" Width="321" Margin="0,0,0,-188.8">
            <DataGrid Name="ProcessInfo" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="dataGrid_selectedRow" CanUserResizeColumns="False" Margin="0,0,0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="id" Binding="{Binding PID}" Width="245"/>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>

        <Grid Margin="0,0,0,77.2" Width="338">
            <Button Margin="130,192,124,-85" Content="Add &#10;comment" Click="AddComment_Click"/>
            <Button Margin="219,192,37,-85" Content="Search &#10;online" Click="Search_Click"/>
        </Grid>


    </DockPanel>
    
</Window>
